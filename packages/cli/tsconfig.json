{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "declaration": true,
    "target": "esnext",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["minigame-api-typings"],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": ["src"]
}
