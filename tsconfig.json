{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["@types/jest"],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": ["src"],
}
